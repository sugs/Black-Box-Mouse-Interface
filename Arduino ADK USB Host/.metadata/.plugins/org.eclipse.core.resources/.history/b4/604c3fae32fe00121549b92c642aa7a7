	//! Reassign the structure to send.
	packet_buffer = &joystick_report;
#endif

#ifdef MOUSE_JOYSTICK_REPORT

	//! Setup the structure values
	joystick_mouse_report.mouse.report_id = 1;

	#ifdef WATCH_ONLY
		joystick_mouse_report.mouse.buttons = random(255);
